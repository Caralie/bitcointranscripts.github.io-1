[{{ range $index, $page := .Site.Pages }}
{{- if and (ne $page.Type "json") (ne $page.Type "html") -}}
{{- if and $index (gt $index 0) -}},{{- end }}
{
	"uri": "{{ $page.Permalink }}",
	"title": {{ $page.Title | jsonify }},
	"content": {{$page.Plain | truncate 500 | jsonify}}
}
{{- end -}}
{{- end -}}]
